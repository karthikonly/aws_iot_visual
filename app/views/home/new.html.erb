<div>
  <h3>Create a new Site</h3>
  <%= form_tag("/activations/create", method: "post") do %>
    <table class="table table-striped">
      <tr>
        <td>Site Name</td>
        <td><%= text_field_tag('activation[name]') %></td>
      </tr>
      <tr>
        <td>Address</td>
        <td><%= text_field_tag('activation[location][address]') %></td>
      </tr>
      <tr>
        <td>City</td>
        <td><%= text_field_tag('activation[location][city]') %></td>
      </tr>
      <tr>
        <td>Zip</td>
        <td><%= text_field_tag('activation[location][zipcode]') %></td>
      </tr>
      <tr>
        <td>State</td>
        <td><%= text_field_tag('activation[location][state]') %></td>
      </tr>
      <tr>
        <td>Country</td>
        <td><%= text_field_tag('activation[location][country]') %></td>
      </tr>

      <tr><td colspan="2"><h5>Count of each devices</h5></td></tr>

      <% Activation::TYPES.each do |type| %>
        <tr>
          <td><%= type %></td>
          <td><%= number_field_tag('activation[provisioned_count]['+type+']') %></td>
        </tr>
      <% end %>

      <tr>
        <td colspan="2"><%= submit_tag("Create", class: 'btn btn-primary') %></td>
      </tr>

    </table>
  <% end %>
</div>
